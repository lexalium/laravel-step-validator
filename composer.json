{
    "name": "lexal/laravel-step-validator",
    "description": "Laravel & Lumen Step validator.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "lumen",
        "stepped-form",
        "step validator",
        "multi-form step validator"
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/contracts": "^9.0 || ^10.0",
        "illuminate/support": "^9.0 || ^10.0",
        "lexal/stepped-form": "^2.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "illuminate/http": "^10.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.3"
    },
    "suggest": {
        "illuminate/validation": "Required to use step data validation on Before Handle Step event (^9.0 || ^10.0)."
    },
    "autoload": {
        "psr-4": {
            "Lexal\\LaravelStepValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\LaravelStepValidator\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lexal\\LaravelStepValidator\\ServiceProvider\\ServiceProvider"
            ]
        }
    }
}
